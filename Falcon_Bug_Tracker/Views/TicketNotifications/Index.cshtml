@model IEnumerable<Falcon_Bug_Tracker.Models.TicketNotification>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title">Assigned Tickets</h4>
                        <table id="basic-datatable" class="table dt-responsive nowrap w-100">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Sender.FirstName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Ticket.SubmitterId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RecipientId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsRead)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NotificationBody)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Created)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Sender.FirstName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Ticket.Submitter.FullName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Recipient.FullName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsRead)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NotificationBody)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Created)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>