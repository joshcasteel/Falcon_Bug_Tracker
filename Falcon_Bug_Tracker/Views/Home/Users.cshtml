@using Falcon_Bug_Tracker.ViewModel
@model UserIndexVM



<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="card mt-2">
                <div class="card-body">
                    <h4 class="header-title mt-2 mb-3">All Users</h4>
                    <table id="basic-datatable" class="table dt-responsive nowrap w-100">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Role</th>
                                <th>Tickets</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>@user.FullName</td>
                                    <td>@user.RoleName</td>
                                    <td>@user.NumberOfTickets</td>
                                    <td>@user.Email</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
