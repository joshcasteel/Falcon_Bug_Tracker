@(Layout = null)

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Log In | Casteel Issue Tracker</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured issue tracker built on .NET MVC 5" name="description" />
    <meta content="Bug Tracker" name="Josh Casteel" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/Images/favicon.ico">

    <!-- App css -->
    <link href="~/Content/icons.min.css" rel="stylesheet" />
    <link href="~/Content/app.min.css" rel="stylesheet" />


</head>

<body class="loading authentication-bg">

    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card">
                        <!-- Logo-->
                        <div class="card-header pt-4 pb-4 text-center bg-primary">
                            <a href="index.html">
                                <span><img src="~/Images/logo.png" alt="" height="50"></span>
                            </a>
                        </div>

                        <div class="card-body p-4">

                            <div class="text-center w-75 m-auto">
                                <h4 class="text-dark-50 text-center mt-0 font-weight-bold">Success!</h4>
                                <br />
                            </div>
                            <div>
                                <p>
                                    Your password has been reset. Please @Html.ActionLink("click here to log in", "Index", "Home", routeValues: null, htmlAttributes: new { id = "loginLink" })
                                </p>
                            </div>
                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->
                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->

    <footer class="footer footer-alt">
        @DateTime.Now.Year © Josh Casteel
    </footer>

    <!-- bundle -->
    <script src="~/Scripts/vendor.min.js"></script>
    <script src="~/Scripts/app.min.js"></script>

</body>
</html>
