@model Falcon_Bug_Tracker.ViewModel.ProjectIndexVM
@using Falcon_Bug_Tracker.Helpers;
@{
    ViewBag.Title = "Index";
}

@if (TempData["Alert"] != null)
{
    <div class="alert alert-danger alert-dismissible bg-danger text-white border-0 fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>Error - </strong> @TempData["Alert"]
    </div>
}


<div class="container-fluid">

    @if (!User.IsInRole("Admin"))
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title">My Projects</h4>

                        <table id="basic-datatable2" class="table dt-responsive nowrap w-100">
                            <thead>
                                <tr role="row">
                                    <th class="all">
                                        @Html.DisplayName("Name")
                                    </th>
                                    <th class="all">
                                        @Html.DisplayName("Project Manager")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Number of Tickets")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Created")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Updated")
                                    </th>
                                    <th class="all"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.MyProjects)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ProjectManagerId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tickets.Count)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Created)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Updated)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title">All Projects</h4>
                        <table id="basic-datatable" class="table dt-responsive nowrap w-100">
                            <thead>
                                <tr role="row">
                                    <th class="all">
                                        @Html.DisplayName("Name")
                                    </th>
                                    <th class="all">
                                        @Html.DisplayName("Project Manager")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Number of Tickets")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Created")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Updated")
                                    </th>
                                    <th class="all"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.AllProjects)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ProjectManagerId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tickets.Count)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Created)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Updated)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
